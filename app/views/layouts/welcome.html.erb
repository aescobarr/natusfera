    <% end %>
    var getItemId = function(id){
      return parseInt(id.substring(id.indexOf("_")+1));
    };

    var clearMarkers = function(){
      for(var i = 0; i < features.length; i++){
        features[i].marker.setMap(null);
      }
    };
    var setCurrentMarker = function(marker){
