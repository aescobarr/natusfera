    });
		
    // Enable Carousel Controls
    $(".left").click(function(){
      $("#obsCarousel").carousel("prev");
    });
    $(".right").click(function(){
      $("#obsCarousel").carousel("next");
    });
	  var $grid = $('.grid').isotope({
	    itemSelector: '.grid-item',
