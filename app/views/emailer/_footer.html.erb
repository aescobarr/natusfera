<%-
  site = @user.site || @site
  site_logo = site.logo.url if site
  site_logo ||= CONFIG.logo 
  site_url = @site ? @site.url : root_url
  img_url = if site_logo =~ /http/
    site_logo
  else
    FakeView.uri_join(site_url, FakeView.image_url(site_logo))
  end
  site_name = @site ? @site.name : CONFIG.site_name
-%>
<div style="border-top: 1px solid #eee; margin-top: 10px; padding-top:10px; color: #777; font-size:smaller;">
  <p>
    <%=t :edit_your_settings_to_unsubscribe_html, :url => generic_edit_user_url %>
  </p>

  <a href="<%= site_url %>"><img valign="middle" src="<%= img_url %>" alt="<%= site_name %>"/></a>
</div>
