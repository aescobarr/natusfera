<h2>Source: <%= @source.title %></h2>

<table>
  <% for c in Source.column_names %>
    <tr>
      <th><%= c.humanize %></th>
      <td><%= @source.send(c) %></td>
    </tr>
  <% end %>
</table>

<% if @source.editable_by?(current_user) %>
  <%= link_to "edit", edit_source_path(@source) %>
<% end -%>